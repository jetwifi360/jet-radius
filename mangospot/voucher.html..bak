        <div id="hk_nav_backdrop" class="hk-nav-backdrop"></div>
        <div class="hk-pg-wrapper">
            <nav class="hk-breadcrumb" aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-light bg-transparent">
                    <li class="breadcrumb-item"><a href="#">Radius</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Form Voucher</li>
                </ol>
            </nav>
            <div class="container">
                <div class="hk-pg-header">
                    <h4 class="hk-pg-title">
                        <span class="pg-title-icon">
                            <span class="feather-icon"><i data-feather="credit-card"></i></span>
                        </span>
                        Batch Voucher System
                    </h4>
                </div>
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="#add-batch" data-toggle="modal">
                                        <i class="fa fa-plus"></i> Generate Batch
                                    </a>
                                    <a class="btn btn-info" href="#import-batch" data-toggle="modal" style="margin-left: 5px;">
                                        <i class="fa fa-upload"></i> Import Batch
                                    </a>
                                    <div class="btn-group dropdown">
                                        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Action
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item action-btn" href="#" data-action="print"><i class="fa fa-print"></i> Print Selected</a>
                                            <a class="dropdown-item action-btn" href="#" data-action="export"><i class="fa fa-file-excel-o"></i> Export to Excel</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item action-btn" href="#" data-action="release"><i class="fa fa-check"></i> Release Selected</a>
                                            <a class="dropdown-item action-btn" href="#" data-action="suspend"><i class="fa fa-ban"></i> Suspend Selected</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item action-btn text-danger" href="#" data-action="delete"><i class="fa fa-trash"></i> Delete Selected</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="tables" class="table table-hover table-striped dataTable">
                                        <thead>
                                            <tr>
                                                <th width="5%"><input type="checkbox" id="CheckAll"></th>
                                                <th>Series Number</th>
                                                <th>Profile</th>
                                                <th>Price</th>
                                                <th>Qty</th>
                                                <th>Created Date</th>
                                                <th>Act</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Modal Add Batch -->
                        <div class="modal fade" id="add-batch" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <form class="modal-content" id="form-batch" method="POST" action="voucher">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Generate Voucher Batch</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="alert alert-info">
                                            Series Number will be generated automatically (Year:Sequence).
                                        </div>
                                        <div class="form-group">
                                            <label for="groupname">Profile <span class="symbol required"></span></label>
                                            <select class="form-control profiles" name="groupname" required>
                                            </select>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-3">
                                                <label for="qty">Qty <span class="symbol required"></span></label>
                                                <input type="number" min="1" max="500" class="form-control normal"
                                                    name="qty" placeholder="Qty" value="10" required>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="mode">Mode </label>
                                                <select class="form-control" name="mode">
                                                    <option value="true">Username & Password</option>
                                                    <option value="false">Username = Password</option>
                                                </select>
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label for="username_length">User Len <span class="symbol required"></span></label>
                                                <input type="number" min="4" max="10" class="form-control" name="username_length"
                                                    value="6" required>
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label for="password_length">Pass Len <span class="symbol required"></span></label>
                                                <input type="number" min="0" max="10" class="form-control" name="password_length"
                                                    value="6" required>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-3">
                                                <label for="prefix">Prefix </label>
                                                <input type="text" class="form-control" name="prefix"
                                                    placeholder="Prefix">
                                            </div>
                                            <div class="form-group col-md-9">
                                                <label for="charecter">Characters </label>
                                                <select class="form-control" name="charecter" required>
                                                    <option value="1">abcd</option>
                                                    <option value="2">ABCD</option>
                                                    <option value="3">aBcD</option>
                                                    <option value="4">1234</option>
                                                    <option value="5">1abc2de</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="descriptions">Description / Note</label>
                                            <textarea class="form-control" name="description"
                                                placeholder="Description..."></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <input type="hidden" id="create" name="created" value="">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i
                                                class="fa fa-close"></i>
                                            Close</button>
                                        <button type="submit" class="btn btn-blue"> <i class="fa fa-magic"></i>
                                            Generate</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Modal Import Batch -->
                        <div class="modal fade" id="import-batch" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <form class="modal-content" id="form-import" method="POST" enctype="multipart/form-data">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Import Voucher Batch</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="alert alert-warning">
                                            File must be .xlsx or .xls. Columns: Series, SN, PIN, Username, Password, Value, Expiration
                                        </div>
                                        <div class="form-group">
                                            <label for="groupname">Profile <span class="symbol required"></span></label>
                                            <select class="form-control profiles" name="groupname" required>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="import_file">Excel File <span class="symbol required"></span></label>
                                            <input type="file" class="form-control-file" name="import_file" required accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel">
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-close"></i> Close</button>
                                        <button type="submit" class="btn btn-success"> <i class="fa fa-upload"></i> Import</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        
                        <!-- Print Modal -->
                        <div class="modal fade" id="print" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Print View</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label>Themes</label>
                                            <select id="theme" class="form-control"></select>
                                            <input type="hidden" id="data"> <!-- Holds batch ID(s) -->
                                        </div>
                                        <div class="form-group">
                                            <label>Cards per row</label>
                                            <select id="cards-per-row" class="form-control">
                                                <option value="3" selected>3</option>
                                                <option value="4">4</option>
                                            </select>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-4">
                                                <label>Card scale (%)</label>
                                                <input type="number" id="card-scale" class="form-control" min="80" max="150" step="1" value="105">
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label>Page padding (mm)</label>
                                                <input type="number" id="page-padding" class="form-control" min="5" max="20" step="0.5" value="8">
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label>Grid gap (mm)</label>
                                                <input type="number" id="grid-gap" class="form-control" min="0" max="10" step="0.5" value="2">
                                            </div>
                                        </div>
                                        <div id="print-content"></div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                            <i class="fa fa-close"></i> Close
                                        </button>
                                        <button type="button" class="btn btn-blue print" value="print-content">
                                            <i class="fa fa-print"></i> Print
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Details Modal (For clicking series number) -->
                        <div class="modal fade" id="details-modal" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Batch Details</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <table class="table table-sm" id="details-table">
                                            <thead>
                                                <tr>
                                                    <th>Username</th>
                                                    <th>Password</th>
                                                    <th>Serial</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="hk-footer-wrap container" data-include="menu/footer.html"></div>
        </div>
    </div>
